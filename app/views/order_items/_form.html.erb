<%= form_with(model: @order_item, local: true, class: "space-y-6") do |form| %>
  <div>
    <%= form.label :order_id, class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :order_id, Order.all, :id, :id, { prompt: "Select an Order" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :inventory_id, class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :inventory_id, Inventory.all, :id, :name, { prompt: "Select an Inventory Item" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :quantity, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :quantity, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :price, step: 0.01, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex items-center justify-end">
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>