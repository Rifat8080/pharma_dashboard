<%= form_with(model: @order, local: true, class: "space-y-6") do |form| %>
  <div>
    <%= form.label :customer_id, class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :customer_id, Customer.all, :id, :first_name, { prompt: "Select a Customer" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, [["Pending", "pending"], ["Completed", "completed"], ["Cancelled", "cancelled"]], { prompt: "Select Status" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :total_price, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :total_price, step: 0.01, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex items-center justify-end">
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>